



let guesses = 3;

function getGuessRange(){
    let rangeNumber = document.getElementById("rangeInput");
    let customNumber = parseInt(rangeNumber.value); 
    //document.getElementsById("guessInput")[0].placeholder=`Enter number between 0 - ${customNumber}`;
    if(customNumber == 0 || customNumber == NaN){
        alert("Please enter a range " + customNumber);
    }else{
        getGuess(customNumber);
    }
}
function resetGuess(){
    if(guesses = 5){
        guesses = 3
        const number = parseInt(Math.random()* customNumber);
    }
}

function getGuess(customNumber){
    
  
    const number = parseInt(Math.random()* customNumber);
    let guesNumber = document.getElementById("guessInput");
    let value = parseInt(guesN  umber.value); 
    alert("Textarea value: " + value);
checkGuess(value,number);
}
function checkGuess(value,number){
   
    
    if(guesses!=0){
       

        if(value > number){
            alert(value +" value larger than " + number); 
            alert("Remaining Guess: "+guesses);
            guesses -=1;   
        }else if(value < number){
            alert( value +" value lower than " + number);
            alert("Remaining Guess: "+guesses);
            guesses -=1;    
        }else if(value == number){
            alert(value +" YOU GUESSED CORRECT " + number);  
            alert("Remaining Guess: "+guesses);
            guesses = 5;   
    }
    }else{
        alert("CANT GUESS ANYMORE ALLOWED GUESSES"+guesses);  
    }
       
  
   
}